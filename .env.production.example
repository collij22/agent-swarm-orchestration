# Agent Swarm Production Configuration
# Copy this file to .env.production and fill in your values

# ======================
# API Keys (REQUIRED)
# ======================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://swarm:swarm_pass@postgres:5432/swarm_db
REDIS_URL=redis://redis:6379/0

# ======================
# Application Settings
# ======================
MODE=production
MONITORING=enabled
LOG_LEVEL=INFO
DEBUG=false

# ======================
# Performance Settings
# ======================
MAX_CONCURRENT_AGENTS=3
AGENT_TIMEOUT_SECONDS=300
CHECKPOINT_INTERVAL=300
MAX_RETRIES=3
RETRY_DELAY_BASE=5

# ======================
# Resource Limits
# ======================
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80
MAX_API_CALLS_PER_MINUTE=100
MAX_COST_PER_HOUR=10
MAX_COST_PER_DAY=100

# ======================
# Monitoring & Alerts
# ======================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_PASSWORD=admin

# Alert Configuration
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_HOST=smtp.gmail.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USER=
ALERT_EMAIL_PASSWORD=
ALERT_EMAIL_FROM=alerts@agentswarm.com
ALERT_EMAIL_TO=admin@agentswarm.com

# Alert Thresholds
ALERT_ERROR_RATE_CRITICAL=0.05
ALERT_ERROR_RATE_WARNING=0.02
ALERT_RESPONSE_TIME_CRITICAL=5000
ALERT_RESPONSE_TIME_WARNING=3000
ALERT_RESOURCE_USAGE_CRITICAL=0.8
ALERT_RESOURCE_USAGE_WARNING=0.6

# ======================
# Security Settings
# ======================
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_with_openssl
SESSION_SECRET_KEY=your_session_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# ======================
# Storage Configuration
# ======================
DATA_DIR=/app/data
LOG_DIR=/app/logs
CHECKPOINT_DIR=/app/checkpoints
SESSION_DIR=/app/sessions
TEMP_DIR=/tmp/agent-swarm

# Retention Policies
LOG_RETENTION_DAYS=30
SESSION_RETENTION_DAYS=90
CHECKPOINT_RETENTION_DAYS=7

# ======================
# Agent Configuration
# ======================
# Agent-specific settings
FRONTEND_SPECIALIST_ENABLED=true
AI_SPECIALIST_ENABLED=true
DATABASE_EXPERT_ENABLED=true
API_INTEGRATOR_ENABLED=true
QUALITY_GUARDIAN_ENABLED=true
RAPID_BUILDER_ENABLED=true
PROJECT_ORCHESTRATOR_ENABLED=true

# Agent Resource Limits
AGENT_MAX_MEMORY_MB=512
AGENT_MAX_EXECUTION_TIME=600
AGENT_MAX_FILE_SIZE_MB=10
AGENT_MAX_FILES_PER_EXECUTION=100

# ======================
# External Services
# ======================
# GitHub Integration
GITHUB_TOKEN=
GITHUB_ORG=
GITHUB_REPO=

# Cloud Provider (AWS/GCP/Azure)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# CDN Configuration
CDN_URL=
CDN_DISTRIBUTION_ID=

# ======================
# Feature Flags
# ======================
FEATURE_PARALLEL_EXECUTION=true
FEATURE_AUTO_RECOVERY=true
FEATURE_CHECKPOINT_RESTORE=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_HUMAN_READABLE_LOGS=true
FEATURE_ENHANCED_MOCK_MODE=true

# ======================
# Development/Debug
# ======================
# Only enable in non-production
ENABLE_PROFILING=false
ENABLE_TRACING=false
ENABLE_DEBUG_ENDPOINTS=false
MOCK_MODE=false
DRY_RUN=false

# ======================
# Deployment Settings
# ======================
DEPLOYMENT_ENV=production
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_BUILD_NUMBER=
DEPLOYMENT_COMMIT_SHA=

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ======================
# Backup Configuration
# ======================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_ENCRYPTION=true