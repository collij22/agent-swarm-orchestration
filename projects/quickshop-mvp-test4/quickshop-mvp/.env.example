# Environment Configuration
ENVIRONMENT=development

# Database Configuration
POSTGRES_DB=quickshop
POSTGRES_USER=quickshop
POSTGRES_PASSWORD=quickshop123
DATABASE_URL=postgresql://quickshop:quickshop123@database:5432/quickshop

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@quickshop.com
ADMIN_EMAIL=admin@quickshop.com

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=quickshop-images
AWS_REGION=us-east-1

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Security Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourdomain.com"]
ALLOWED_HOSTS=["localhost","127.0.0.1","yourdomain.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# SSL/TLS (Production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Docker Compose Overrides
COMPOSE_PROJECT_NAME=quickshop
COMPOSE_FILE=docker-compose.yml