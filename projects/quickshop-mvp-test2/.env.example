# Database Configuration
DATABASE_URL=postgresql://quickshop_user:quickshop_pass@db:5432/quickshop
POSTGRES_DB=quickshop
POSTGRES_USER=quickshop_user
POSTGRES_PASSWORD=quickshop_pass

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@quickshop.com

# Application Configuration
ENVIRONMENT=development
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET_NAME=quickshop-assets
AWS_REGION=us-east-1

# Production Configuration
SSL_REDIRECT=false
SECURE_COOKIE=false
SENTRY_DSN=your_sentry_dsn