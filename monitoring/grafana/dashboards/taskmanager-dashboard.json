{
  "dashboard": {
    "id": null,
    "title": "TaskManager API Dashboard",
    "tags": ["taskmanager", "api", "monitoring"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"taskmanager-api\"}[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"taskmanager-api\"}[5m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"taskmanager-api\"}[5m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"taskmanager-api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"taskmanager-api\"}[5m])) * 100",
            "legendFormat": "5xx Error Rate %",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"taskmanager-api\",status=~\"4..\"}[5m])) / sum(rate(http_requests_total{job=\"taskmanager-api\"}[5m])) * 100",
            "legendFormat": "4xx Error Rate %",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate (%)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Active Tasks",
        "type": "stat",
        "targets": [
          {
            "expr": "taskmanager_active_tasks_total",
            "legendFormat": "Active Tasks",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "AI Processing Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(taskmanager_ai_requests_total[5m])",
            "legendFormat": "AI Requests/sec",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "taskmanager_db_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "taskmanager_db_connections_idle",
            "legendFormat": "Idle Connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=\"taskmanager-backend\"} / 1024 / 1024",
            "legendFormat": "Backend Memory (MB)",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ]
  }
}