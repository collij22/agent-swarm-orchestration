{
  "app": {
    "name": "QuickShop MVP",
    "version": "1.0.0",
    "environment": "development",
    "debug": true,
    "host": "localhost",
    "port": 8000,
    "allowed_hosts": ["localhost", "127.0.0.1", "0.0.0.0"],
    "cors_origins": ["http://localhost:3000", "http://127.0.0.1:3000"]
  },
  "database": {
    "provider": "postgresql",
    "host": "localhost",
    "port": 5432,
    "name": "quickshop_db",
    "username": "quickshop_user",
    "password": "quickshop_password",
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "pool_recycle": 3600,
    "echo": false,
    "ssl_mode": "prefer",
    "connection_string": "postgresql://quickshop_user:quickshop_password@localhost:5432/quickshop_db"
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "password": null,
    "socket_timeout": 30,
    "socket_connect_timeout": 30,
    "max_connections": 10
  },
  "authentication": {
    "jwt": {
      "secret_key": "your-super-secret-jwt-key-change-in-production",
      "algorithm": "HS256",
      "access_token_expire_minutes": 30,
      "refresh_token_expire_days": 7
    },
    "password": {
      "min_length": 8,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_special_chars": true,
      "bcrypt_rounds": 12
    },
    "session": {
      "cookie_name": "quickshop_session",
      "cookie_secure": false,
      "cookie_httponly": true,
      "cookie_samesite": "lax",
      "session_timeout_minutes": 60
    }
  },
  "api": {
    "prefix": "/api/v1",
    "title": "QuickShop MVP API",
    "description": "E-commerce API for QuickShop MVP application",
    "version": "1.0.0",
    "docs_url": "/docs",
    "redoc_url": "/redoc",
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100,
      "burst_limit": 200
    },
    "pagination": {
      "default_page_size": 20,
      "max_page_size": 100
    }
  },
  "features": {
    "user_auth": {
      "enabled": true,
      "email_verification": true,
      "password_reset": true,
      "social_login": false,
      "two_factor_auth": false
    },
    "product_catalog": {
      "enabled": true,
      "categories": true,
      "search": true,
      "filtering": true,
      "sorting": true,
      "reviews": false,
      "ratings": false,
      "inventory_tracking": true
    },
    "shopping_cart": {
      "enabled": true,
      "guest_cart": true,
      "persistent_cart": true,
      "cart_expiry_days": 30,
      "max_items_per_cart": 100
    },
    "orders": {
      "enabled": true,
      "order_tracking": true,
      "order_history": true,
      "order_cancellation": true,
      "order_status_updates": true,
      "invoice_generation": false
    },
    "payments": {
      "enabled": false,
      "stripe": false,
      "paypal": false,
      "cash_on_delivery": false
    },
    "notifications": {
      "email": false,
      "sms": false,
      "push": false
    }
  },
  "email": {
    "smtp_server": "localhost",
    "smtp_port": 587,
    "smtp_username": "",
    "smtp_password": "",
    "use_tls": true,
    "from_email": "noreply@quickshop.com",
    "from_name": "QuickShop"
  },
  "file_storage": {
    "provider": "local",
    "local": {
      "upload_path": "./uploads",
      "max_file_size_mb": 10,
      "allowed_extensions": ["jpg", "jpeg", "png", "gif", "webp"]
    },
    "aws_s3": {
      "bucket_name": "",
      "region": "",
      "access_key_id": "",
      "secret_access_key": ""
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_path": "./logs/quickshop.log",
    "max_file_size_mb": 10,
    "backup_count": 5,
    "log_to_console": true,
    "log_to_file": true
  },
  "security": {
    "cors": {
      "allow_credentials": true,
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["*"],
      "max_age": 86400
    },
    "csrf": {
      "enabled": false,
      "secret_key": "csrf-secret-key"
    },
    "headers": {
      "x_frame_options": "DENY",
      "x_content_type_options": "nosniff",
      "x_xss_protection": "1; mode=block",
      "strict_transport_security": "max-age=31536000; includeSubDomains"
    }
  },
  "cache": {
    "enabled": true,
    "default_timeout": 300,
    "product_cache_timeout": 3600,
    "user_cache_timeout": 1800,
    "cart_cache_timeout": 600
  },
  "monitoring": {
    "health_check_endpoint": "/health",
    "metrics_endpoint": "/metrics",
    "prometheus": {
      "enabled": false,
      "port": 9090
    }
  },
  "development": {
    "auto_reload": true,
    "debug_toolbar": true,
    "sql_echo": false,
    "mock_external_services": true
  },
  "testing": {
    "database": {
      "name": "quickshop_test_db",
      "connection_string": "postgresql://quickshop_user:quickshop_password@localhost:5432/quickshop_test_db"
    },
    "fixtures": {
      "load_sample_data": true,
      "sample_users": 10,
      "sample_products": 50,
      "sample_orders": 20
    }
  },
  "production": {
    "debug": false,
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "ssl": {
      "enabled": false,
      "cert_file": "",
      "key_file": ""
    },
    "database": {
      "pool_size": 20,
      "max_overflow": 40,
      "echo": false
    }
  }
}